<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_feedmaterial"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_serial_no"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="3dip"
            android:textSize="15sp" />
        <View
            android:layout_toEndOf="@id/tv_serial_no"
            android:layout_height="match_parent"
            android:layout_width="1dp"
            android:background="#000" />
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="30dp"
            android:layout_height="2dip"
            android:background="#afafaf" />
    </RelativeLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TableRow>
            <TextView
                android:gravity="center"
                android:padding="3dip"
                android:layout_width="80dp"
                android:textSize="14sp"
                android:id="@+id/tv_orgLineSeat"
                android:text="" />


            <TextView
                android:gravity="center"
                android:padding="3dip"
                android:layout_width="150dp"
                android:textSize="14sp"
                android:id="@+id/tv_orgMaterial"
                android:text="" />

            <TextView
                android:gravity="center_horizontal"
                android:padding="3dip"
                android:layout_weight="18"
                android:textSize="18sp"
                android:id="@+id/tv_Result"/>
        </TableRow>

        <TableRow>

            <TextView
                android:gravity="center"
                android:padding="3dip"
                android:layout_width="80dp"
                android:textSize="14sp"
                android:id="@+id/tv_scanLineSeat"
                android:text="" />

            <!--<View-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_width="1dp"-->
                <!--android:background="#000" />-->

            <TextView
                android:gravity="center_horizontal"
                android:padding="3dip"
                android:layout_width="150dp"
                android:textSize="14sp"
                android:id="@+id/tv_scanMaterial"
                android:text="" />

            <!--<View-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_width="1dp"-->
                <!--android:background="#000" />-->

            <TextView
                android:gravity="center_horizontal"
                android:padding="3dip"
                android:layout_weight="18"
                android:textSize="14sp"
                android:id="@+id/tv_Remark"
                android:text=""
                />

            <!--<View-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_width="1dp"-->
                <!--android:background="#000" />-->
        </TableRow>


        <View
            android:layout_height="2dip"
            android:background="#afafaf" />


    </TableLayout>


</LinearLayout>
